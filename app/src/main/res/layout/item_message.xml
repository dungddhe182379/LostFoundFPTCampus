<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Sent message (right side) -->
    <LinearLayout
        android:id="@+id/sentLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="?attr/colorPrimary">

            <TextView
                android:id="@+id/sentMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="280dp"
                android:padding="12dp"
                android:textSize="14sp"
                android:textColor="?attr/colorOnPrimary"
                android:text="Tin nhắn gửi đi" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/sentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="2dp"
            android:textSize="11sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:text="14:32" />

    </LinearLayout>

    <!-- Received message (left side) -->
    <LinearLayout
        android:id="@+id/receivedLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/senderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:text="Nguyễn Văn A" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="?attr/colorSurfaceVariant">

            <TextView
                android:id="@+id/receivedMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="280dp"
                android:padding="12dp"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:text="Tin nhắn nhận được" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/receivedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="2dp"
            android:textSize="11sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:text="14:30" />

    </LinearLayout>

</FrameLayout>
