<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Header with Gradient -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background"
        android:elevation="0dp"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ—ºï¸ Báº£n Äá»“"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KhÃ¡m phÃ¡ vá»‹ trÃ­ Ä‘á»“ tháº¥t láº¡c xung quanh báº¡n"
                android:textColor="@color/white_alpha_80"
                android:textSize="14sp"/>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Full Screen Map -->
        <org.osmdroid.views.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!-- Overlay Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Top Filter Bar with Gradient Shadow -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:backgroundTint="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”"
                        android:textSize="20sp"
                        android:layout_marginEnd="8dp"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupFilter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:singleSelection="true"
                        app:selectionRequired="true"
                        app:chipSpacing="8dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Táº¥t cáº£"
                            android:checked="true"
                            android:textSize="13sp"
                            style="@style/Widget.App.Chip"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipLost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”´ Máº¥t"
                            android:textSize="13sp"
                            style="@style/Widget.App.Chip"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipFound"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŸ¢ TÃ¬m tháº¥y"
                            android:textSize="13sp"
                            style="@style/Widget.App.Chip"/>

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- Bottom Item Detail Card - Initially Hidden -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardItemInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:visibility="gone"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                android:backgroundTint="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Item Image Preview -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:id="@+id/ivItemPreview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@android:drawable/ic_menu_gallery"
                            android:contentDescription="Item preview"/>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Item Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvItemTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TÃªn Ä‘á»“ váº­t"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:ellipsize="end"/>

                        <TextView
                            android:id="@+id/tvItemCategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Danh má»¥c â€¢ Tráº¡ng thÃ¡i"
                            android:textColor="@color/text_secondary"
                            android:textSize="13sp"
                            android:layout_marginTop="4dp"
                            android:maxLines="1"
                            android:ellipsize="end"/>

                        <!-- Action Buttons -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp"
                            android:gravity="end">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnShowRoute"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="Chá»‰ Ä‘Æ°á»ng"
                                android:textSize="13sp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                app:icon="@android:drawable/ic_menu_directions"
                                app:iconSize="18dp"
                                app:iconGravity="textStart"
                                app:cornerRadius="20dp"
                                style="@style/Widget.Material3.Button.TonalButton"
                                android:layout_marginEnd="8dp"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnViewDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="Chi tiáº¿t"
                                android:textSize="13sp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                app:icon="@android:drawable/ic_menu_info_details"
                                app:iconSize="18dp"
                                app:iconGravity="textStart"
                                app:cornerRadius="20dp"
                                style="@style/Widget.Material3.Button"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Stats Bar at Bottom -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:backgroundTint="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center">

                    <!-- Lost Count -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”´"
                            android:textSize="16sp"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/tvLostCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/status_lost"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="24dp"
                        android:background="@color/divider"/>

                    <!-- Found Count -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŸ¢"
                            android:textSize="16sp"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/tvFoundCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/status_found"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="24dp"
                        android:background="@color/divider"/>

                    <!-- Total Count -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“Š"
                            android:textSize="16sp"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/tvTotalCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/primary"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </FrameLayout>

    <!-- Floating Action Button - My Location -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMyLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="180dp"
        android:src="@android:drawable/ic_menu_mylocation"
        android:contentDescription="Vá»‹ trÃ­ cá»§a tÃ´i"
        app:tint="@android:color/white"
        app:backgroundTint="@color/primary"
        app:elevation="8dp"
        app:pressedTranslationZ="12dp"
        app:borderWidth="0dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
